extends partials/layout.pug

block content
  h1 Contact Us
  .contact-form
    form(method='POST')
      .form-group
        label(for='name') Name
        input.form-control(id='name' type='text' name='name' placeholder='John Doe')
      .form-group
        label(for='email') Email
        input.form-control(id='email' type='email' name='email' placeholder='you@example.com')
      .form-group
        label(for='phone') Phone Number
        input.form-control(id='phone' type='phone' name='phone' placeholder='555-123-4567')
      .form-group
        label(for='message') Message
        textarea.form-control#message(name='message' rows=5 placeholder='What\'s the ingredient?')
      .contact-form__submit
        a.btn.btn-danger.btn-lg(href='/') Cancel
        input.btn.btn-success.btn-lg(type='submit' value='Submit')
