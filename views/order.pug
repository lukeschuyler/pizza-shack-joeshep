extends partials/layout.pug

block content
  //- if errors
  //-   each err in errors
  //-     h1 err.message
  .heading
    h1 Order
  .order-form
    form(method='POST')
      .form-group()
        label.control-label(for='name') Name
        input.form-control#name(
          type='text'
          name='name'
          placeholder='Jane Doe'
          value=body.name
          required
        )
        //- if errors.name
        //-   span.help-block= errors.name.message
      .form-group()
        label.control-label(for='phone') Phone Number
        input.form-control#phone(
          type='tel'
          name='phone'
          placeholder='555-124-1234'
          value=body.phone
          required
        )
        //- if errors.phone
        //-   span.help-block=errors.phone.message
      .form-group()
        label.control-label(for='phone') Size
        select.form-controll#size(name='size' required)
          option(disabled selected) Select a Size:
          each size in sizes
            option(
              value=size.inches
              selected=(+body.size === +size.inches)
            ) #{size.name}: #{size.inches}
        //- if errors.size
        //-   span.help-block=errors.size.message
      #toppings()
        h5 Toppings
        each topping in toppings
          label= topping.name
            input(
              type='checkbox'
              name='topping'
              value=topping.name
              selected=(body.toppings && body.toppings.includes(topping.name))
            )
        //- if errors.toppings
        //-   span.help-block=errors.toppings.message
        .order-form__submit
          a.btn.btn-danger.btn-lg(href='/') Cancel
          input.btn.btn-success.btn-lg(type='submit' value='Order It!')
